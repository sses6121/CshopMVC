    <script>
        $(document).ready(function () {
            console.log("ready!");
        });

        function AddToCart(ProdId) {
            $.ajax({
                type: 'post',
                url: '@Url.Action("AddToCart","Cart")',
                data: { ProdId: ProdId}
            }).done(function (msg) {
                $('li#Cart').html(msg);
                });
        }
        function RemoveFromCart(ProdId) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("RemoveFromCart","Cart")',
                data: { ProdId: ProdId }
            }).done(function (msg) {
                $('li#Cart').html(msg);
            });
        }
        function ClearCart() {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ClearCart","Cart")',
                data: {}
            }).done(function (msg) {
                $('li#Cart').html(msg);
            });
        }
    </script>
    <style>
