@model List<homework0927.Models.ProdInfo>

@{
    ViewBag.Title = "Detail";
    //var commentList = new List<homework0927.Models.ProdInfo>();
}

<h2>商品資訊</h2>

<div>
    <hr />
    @foreach(var item in Model) { 
    <dl class="dl-horizontal">
        <dt>

        </dt>

        <dd>
            <img src='@String.Format("/images/{0}.jpeg",item.ProdId)' width="400" />
        </dd>

        <dt>
            名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => item.ProdName)
        </dd>

        <dt>
            描述
        </dt>

        <dd>
            @Html.DisplayFor(model => item.ProdContent)
        </dd>

        <dt>
            售價
        </dt>

        <dd>
            @Html.DisplayFor(model => item.ProdPrice) &nbsp;元
        </dd>
        <dd>
            <a onclick="AddToCart('@item.ProdId')" href="javascript:void(0);"
               class="btn btn-primary" role="button">
                加入購物車
            </a>
        </dd>
    </dl>

    }
</div>
<p>
    @Html.ActionLink("回首頁", "Index", null, new { @class = "btn btn-default" })
</p>
